{
  "name": "PromptAgro - AI Agri-Packaging",
  "description": "Transform your farm products into premium brands with AI-powered packaging design",
  "repository": "https://github.com/yourusername/PROMPT-AGRO",
  "logo": "https://promptagro.vercel.app/favicon.ico",
  "keywords": [
    "agriculture",
    "ai",
    "packaging",
    "design",
    "branding",
    "farmers",
    "fastapi",
    "python"
  ],
  "image": "heroku/python",
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "DEBUG": {
      "description": "Debug mode for development",
      "value": "False"
    },
    "GEMINI_API_KEY": {
      "description": "Your Google Gemini AI API key for generating designs",
      "required": true
    },
    "HOST": {
      "description": "Host to bind the server to",
      "value": "0.0.0.0"
    },
    "PORT": {
      "description": "Port to run the server on (set by Heroku)",
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini",
      "as": "DATABASE"
    }
  ],
  "scripts": {
    "postdeploy": "echo 'PromptAgro deployed successfully!'"
  }
}
